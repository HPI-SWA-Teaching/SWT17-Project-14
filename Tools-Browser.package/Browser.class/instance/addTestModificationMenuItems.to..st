SWT014-SqueakCheck
addTestModificationMenuItems: aCompiledMethod to: aMenu
	|subMenu|
	
	subMenu := MenuMorph new.
	subMenu
		add: 'open' target: self selector: #openCompiledMethod: argument: aCompiledMethod;
		balloonTextForLastItem: 'open test in browser';
		add: 'run' target: self selector: #runTest: argument: aCompiledMethod;
		balloonTextForLastItem: 'run';
		add: 'delete counter examples' target: self selector: #deleteCounterExamples: argument: aCompiledMethod;
		balloonTextForLastItem: 'delete all counter examples generated by SqueakCheck'.
	
	aMenu add: aCompiledMethod selector subMenu: subMenu.