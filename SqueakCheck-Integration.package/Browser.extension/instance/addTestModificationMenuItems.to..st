*SqueakCheck-Integration
addTestModificationMenuItems: aSelector to: aMenu
	| subMenu |
	
	subMenu := MenuMorph new.
	subMenu
		add: 'open' target: self selector: #openMethod: argument: aSelector;
		balloonTextForLastItem: 'open test in browser';
		add: 'run' target: self selector: #runTest: argument: aSelector;
		balloonTextForLastItem: 'run';
		add: 'delete counter examples' target: self selector: #deleteCounterExamples: argument: aSelector;
		balloonTextForLastItem: 'delete all counter examples generated by SqueakCheck'.
	aMenu add: aSelector subMenu: subMenu.